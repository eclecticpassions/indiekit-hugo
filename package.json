{
  "name": "hugo-indiekit",
  "version": "1.0.0",
  "description": "Indiekit server for https://burgeonlab.com",
  "main": "index.js",
  "scripts": {
    "build": "indiekit build",
    "start": "indiekit serve"
  },
  "keywords": [
    "indiekit",
    "indieweb"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "indiekit": {
    "plugins": [
      "@indiekit/preset-hugo",
      "@indiekit/store-github",
      "@indiekit/syndicator-mastodon"
    ],
    "publication": {
      "me": "https://burgeonlab.com"
    },
    "@indiekit/preset-hugo": {
      "frontMatterFormat": "toml"
    },
    "@indiekit/store-github": {
      "user": "process.env.GITHUB_USERNAME",
      "repo": "process.env.GITHUB_REPOSITORY",
      "branch": "main",
      "token": "process.env.GITHUB_TOKEN"
    },
    "@indiekit/syndicator-mastodon": {
      "accessToken": "process.env.MASTODON_ACCESS_TOKEN",
      "includePermalink": true,
      "checked": true,
      "url": "https://REDACTED",
      "user": "process.env.MASTODON_USERNAME"
    }
  },
  "dependencies": {
    "@indiekit/indiekit": "^1.0.0-beta.24",
    "@indiekit/preset-hugo": "^1.0.0-beta.20",
    "@indiekit/store-github": "^1.0.0-beta.21",
    "@indiekit/syndicator-mastodon": "^1.0.0-beta.23"
  }
}
